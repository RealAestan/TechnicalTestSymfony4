{% extends 'base.html.twig' %}

{% block body_id 'student_show' %}

{% block main %}
    <h1>{{ student.firstName }} {{ student.lastName }} - {{ student.birthDate|localizeddate('short', 'none', null, 'UTC') }}</h1>

    {{ include('student/_student_marks.html.twig') }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('student_add_mark', {id: student.id}) }}" class="btn btn-lg btn-block btn-primary">
            <i class="fa fa-sticky-note-o" aria-hidden="true"></i> {{ 'action.add_mark'|trans }}
        </a>
        <a href="{{ path('student_edit', {id: student.id}) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit_contents'|trans }}
        </a>
    </div>

    <div class="section">
        {{ include('student/_delete_form.html.twig', {student: student}, with_context = false) }}
    </div>

    {{ parent() }}
{% endblock %}